@model IEnumerable<Site_Locadora.Models.Aluguel>

@{
    ViewData["Title"] = "Aluguéis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Lista de Aluguéis</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Novo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.IdCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.IdFilme)</th>
                    <th>@Html.DisplayNameFor(model => model.DataAluguel)</th>
                    <th>@Html.DisplayNameFor(model => model.DataDevolucao)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdCliente)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdFilme)</td>
                        <td>@(item.DataAluguel.ToString("dd/MM/yyyy"))</td>
                        <td>@(item.DataDevolucao.HasValue? item.DataDevolucao.Value.ToString("dd/MM/yyyy") : "-")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
