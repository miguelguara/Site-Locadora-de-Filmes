@model Site_Locadora.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary"><i class="bi bi-person-plus-fill"></i> Criar Cliente</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="card p-4 shadow-sm bg-light rounded">
                <h4 class="mb-3">Informações do Cliente</h4>
                <hr />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cpf" class="form-label"></label>
                    <input asp-for="Cpf" class="form-control" placeholder="Digite o CPF" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Criar" class="btn btn-success">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
