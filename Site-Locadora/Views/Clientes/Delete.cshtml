@model Site_Locadora.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 bg-light rounded">
        <h1 class="mb-3 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Excluir Cliente</h1>
        <h5 class="mb-4">Tem certeza que deseja excluir este cliente?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cpf)</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-start">
            <input type="submit" value="Excluir" class="btn btn-danger me-2" />
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </form>
    </div>
</div>
