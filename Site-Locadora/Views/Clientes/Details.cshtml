@model Site_Locadora.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4 bg-light rounded">
        <h1 class="mb-3 text-primary"><i class="bi bi-person-lines-fill"></i> Detalhes do Cliente</h1>

        <dl class="row mb-4">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cpf)</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <div class="d-flex justify-content-start">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
        </div>
    </div>
</div>
